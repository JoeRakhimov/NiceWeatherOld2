<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="dayForecast"
            type="com.joerakhimov.niceweather.forecast.DailyItem" />
        <variable
            name="clickListener"
            type="com.joerakhimov.niceweather.forecast.ForecastClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:onClick="@{() -> clickListener.onClick(dayForecast)}">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@{dayForecast.date}"/>

            <TextView
                android:id="@+id/text_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{dayForecast.tempMin+`°/`+dayForecast.tempMax+`°`}"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{dayForecast.condition}"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</layout>